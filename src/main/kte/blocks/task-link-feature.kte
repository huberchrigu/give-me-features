@import ch.chrigu.gmf.tasks.TaskId

@param taskId: TaskId

<div id="item-selector" class="card p-3 mb-4">
    <div class="card-header text-bg-info">
        <h3 class="mb-0">Link Feature</h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="name" class="form-label">Search Feature:</label>
            <input class="form-control" id="name" name="name" type="text" placeholder="Search..."
                   autocomplete="off"
                   hx-get="/tasks/${taskId.toString()}/link-feature/search"
                   hx-trigger="input changed delay:300ms"
                   hx-target="#item-list"
                   hx-swap="outerHTML"/>
        </div>

        <button type="button" class="btn btn-sm btn-secondary mb-3"
                hx-get="/tasks/${taskId.toString()}/link-feature/cancel">
            âŒ Cancel
        </button>

        <div id="item-list" class="list-group"></div>
    </div>
</div>
